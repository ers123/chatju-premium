{
  "name": "chatju-backend",
  "version": "1.0.0",
  "description": "ChatJu Premium Backend - AI-powered Korean fortune-telling service",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "deploy": "serverless deploy --stage prod",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:remove": "serverless remove --stage prod",
    "logs": "serverless logs -f api --stage prod --tail",
    "offline": "serverless offline"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.70.0",
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.1.0",
    "mansae-calculator": "git+https://github.com/ers123/manse-calculator.git",
    "openai": "^5.1.0",
    "serverless-http": "^3.2.0",
    "stripe": "^19.3.0",
    "winston": "^3.17.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "serverless-offline": "^13.3.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "fortune-telling",
    "saju",
    "manseryeok",
    "korean-astrology",
    "ai",
    "serverless"
  ],
  "author": "CodexNine <contact@harmonycon.com>",
  "license": "MIT"
}
